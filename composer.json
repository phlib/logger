{
    "name": "phlib/logger",
    "description": "Additional Logging Classes",
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "Adam Whale"
        },
        {
            "name": "Martin Price"
        },
        {
            "name": "Phlib Team & Contributors",
            "homepage": "https://github.com/phlib/logger/contributors"
        }
    ],
    "require": {
        "php": "^5.4|^7",
        "ext-json": "*",
        "psr/log": "^1.0",
        "graylog2/gelf-php": "^1.3",
        "symfony/console": "^2.5.12|^3|^4|^5"
    },
    "autoload": {
        "psr-4": {
            "Phlib\\Logger\\": "src"
        }
    },
    "provide": {
        "psr/log-implementation": "1.0"
    },

    "require-dev": {
        "phpunit/phpunit": "^4.7"
    },

    "autoload-dev": {
        "psr-4": {
            "Phlib\\Logger\\Test\\": "tests"
        }
    }
}
