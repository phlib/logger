{
    "name": "phlib/logger",
    "description": "Additional Logging Classes",
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "Adam Whale"
        },
        {
            "name": "Martin Price"
        },
        {
            "name": "Phlib Team & Contributors",
            "homepage": "https://github.com/phlib/logger/contributors"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "psr/log": "^2 || ^3",
        "graylog2/gelf-php": "^2",
        "symfony/console": "^6 || ^7"
    },
    "autoload": {
        "psr-4": {
            "Phlib\\Logger\\": "src"
        }
    },
    "provide": {
        "psr/log-implementation": "2.0 || 3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10",
        "symplify/easy-coding-standard": "^12"
    },
    "autoload-dev": {
        "psr-4": {
            "Phlib\\Logger\\Test\\": "tests"
        }
    },
    "scripts": {
        "check-cs": "vendor/bin/ecs check --ansi",
        "fix-cs": "vendor/bin/ecs check --fix --ansi"
    }
}
